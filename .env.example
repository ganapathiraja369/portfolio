# Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit the .env file to version control

# ==========================================
# MongoDB Configuration
# ==========================================
# MongoDB admin username (for docker-compose service initialization)
MONGODB_USER=portfolio_user

# MongoDB admin password (for docker-compose service initialization)
# Change this to a strong password for production
MONGODB_PASSWORD=portfolio_password

# ==========================================
# Gmail SMTP Configuration
# ==========================================
# Gmail account username
MAIL_USERNAME=prdy0000@gmail.com

# Gmail App Password (generate from https://myaccount.google.com/apppasswords)
# Must be exactly 16 characters (without spaces)
MAIL_PASSWORD=your-16-char-app-password-here

# ==========================================
# Spring Boot Configuration
# ==========================================
# Application name
SPRING_APPLICATION_NAME=portfolio-api

# Server port
SERVER_PORT=8080

# Spring profile (dev, test, prod)
SPRING_PROFILES_ACTIVE=dev

# ==========================================
# Logging Configuration
# ==========================================
# Root logging level (TRACE, DEBUG, INFO, WARN, ERROR)
LOGGING_LEVEL_ROOT=INFO

# Application package logging level
LOGGING_LEVEL_COM_EXAMPLE=DEBUG

# ==========================================
# Optional: Database Replica Set (Production)
# ==========================================
# MongoDB replica set name (only for production with replica sets)
# MONGO_REPLICA_SET=rs0

# ==========================================
# Optional: Docker Registry (For Deployment)
# ==========================================
# Docker registry URL
# DOCKER_REGISTRY=docker.io

# Docker registry username
# DOCKER_USERNAME=your-username

# Docker registry password/token
# DOCKER_PASSWORD=your-password-or-token

# ==========================================
# Optional: Backup Configuration
# ==========================================
# Backup directory path
# BACKUP_DIR=/backups/mongodb

# Backup retention days
# BACKUP_RETENTION_DAYS=30

# ==========================================
# Optional: Advanced Settings
# ==========================================
# Database connection timeout (ms)
# DATABASE_CONNECT_TIMEOUT=5000

# Database socket timeout (ms)
# DATABASE_SOCKET_TIMEOUT=5000

# SMTP connection timeout (ms)
# SMTP_TIMEOUT=5000

# Application timezone
# APP_TIMEZONE=UTC

# ==========================================
# Production Only (Uncomment for Production)
# ==========================================
# Security headers
# SECURITY_HEADERS_ENABLED=true

# CORS allowed origins (comma-separated)
# CORS_ALLOWED_ORIGINS=https://example.com,https://app.example.com

# Rate limiting enabled
# RATE_LIMITING_ENABLED=true

# Rate limiting requests per minute
# RATE_LIMIT_PER_MINUTE=60

# ==========================================
# Important Notes
# ==========================================
# 1. Never commit this file with real values to version control
# 2. Always use strong passwords in production
# 3. Keep backups of your .env file securely
# 4. Rotate passwords regularly
# 5. Use secrets management in production (Docker Secrets, Vault, etc.)
# 6. Review and update values before deployment
# 7. Test configuration in development before production
# 8. Monitor logs for any configuration issues
